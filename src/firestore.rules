
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isOrgOwner(orgId) {
        let orgDoc = get(/databases/$(database)/documents/organizations/$(orgId));
        return orgDoc.data.createdBy == request.auth.uid;
    }
    
    function isAdmin() {
      // Explicitly grant admin role only to a specific email.
      return request.auth.token.email == 'dev.jorge.c@gmail.com';
    }

    // USERS
    // Users can be created by anyone signing up.
    // Users can only read and update their own profile. Admins can also update.
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      allow update, delete: if isAdmin();
    }
    
    // Allow users to manage their own action drafts
    match /users/{userId}/actions/{draftId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // ORGANIZATIONS
    // Publicly readable for single document reads (get for profile pages).
    // Listable only by the user who created them.
    match /organizations/{orgId} {
        allow get: if true;
        allow list: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
        allow update, delete: if isSignedIn() && isOrgOwner(orgId);
    }
    
    // PROJECTS
    // Projects can only be created by the owner of the parent organization.
    // They can only be read, updated, or deleted by the organization owner.
    match /projects/{projectId} {
        allow read, list: if isSignedIn() && isOrgOwner(resource.data.orgId);
        allow create: if isSignedIn() && isOrgOwner(request.resource.data.orgId) && request.resource.data.createdBy == request.auth.uid;
        allow update, delete: if isSignedIn() && isOrgOwner(resource.data.orgId);
    }
    
    // ACTIONS
    // Actions can be created by any signed-in user.
    // They are publicly readable if verified.
    // They are always readable by their creator or an admin.
    // Admin can update them (for verification). Owner can update before verification.
    match /actions/{actionId} {
        allow get: if resource.data.status == 'verified' || (isSignedIn() && isOwner(resource.data.createdBy)) || isAdmin();
        allow list: if isSignedIn(); // Users can list their own actions via client-side query
        allow create: if isSignedIn(); // Any signed-in user can create an action.
        allow update: if isAdmin() || (isSignedIn() && isOwner(resource.data.createdBy) && resource.data.status != 'verified');
        allow delete: if isSignedIn() && isOwner(resource.data.createdBy);
    }

    // LEAP ASSESSMENTS
    // Only the organization owner or an admin can manage assessments.
    match /leapAssessments/{assessmentId} {
       allow get, list, update, delete: if isSignedIn() && (isOrgOwner(resource.data.orgId) || isAdmin());
       allow create: if isSignedIn() && isOrgOwner(request.resource.data.orgId);
    }

    // ACTION TYPES
    // Action types are public but can only be created by admins.
    match /actionTypes/{typeId} {
      allow read;
      allow list;
      allow create: if isAdmin();
    }

  }
}
