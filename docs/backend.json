
{
  "entities": {
    "Organization": {
      "title": "Organization",
      "description": "Represents an organization or collective.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the organization."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the organization."
        },
        "image": {
          "type": "string",
          "description": "URL for the organization's logo or image."
        },
        "createdBy": {
          "type": "string",
          "description": "The UID of the user who created the organization."
        },
        "walletAddress": {
          "type": "string",
          "description": "Primary wallet address for the organization."
        },
        "ens": {
          "type": "string",
          "description": "Optional ENS name."
        },
        "gnosisSafe": {
          "type": "string",
          "description": "Optional Gnosis Safe address for multisig."
        },
        "slug": {
          "type": "string",
          "description": "A unique slug for the organization's public profile."
        },
        "isVerified": {
          "type": "boolean",
          "description": "Whether the organization is verified by BeRegen."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name", "createdBy", "slug", "createdAt"]
    },
    "Project": {
      "title": "Project",
      "description": "A specific project run by an organization.",
      "type": "object",
      "properties": {
        "orgId": {
          "type": "string",
          "description": "Reference to the parent organization."
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "impactCategory": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "createdBy": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["orgId", "title", "createdBy", "createdAt"]
    },
    "Intent": {
      "title": "Intent",
      "description": "A declaration of what a project intends to accomplish.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "orgId": { "type": "string" },
        "title": { "type": "string" },
        "category": { "type": "string" },
        "goalDescription": { "type": "string" },
        "targetDate": { "type": "string", "format": "date-time" },
        "createdBy": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["projectId", "orgId", "title", "createdBy", "createdAt"]
    },
    "Action": {
      "title": "Action",
      "description": "A specific regenerative action performed and submitted for validation.",
      "type": "object",
      "properties": {
        "intentId": { "type": "string" },
        "projectId": { "type": "string" },
        "orgId": { "type": "string" },
        "description": { "type": "string" },
        "mediaUrls": {
          "type": "array",
          "items": { "type": "string" }
        },
        "status": {
          "type": "string",
          "enum": ["submitted", "under_review", "approved", "rejected"]
        },
        "validatorId": { "type": "string" },
        "validationComments": { "type": "string" },
        "validationScore": { "type": "number" },
        "certificateUrl": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "validatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["intentId", "projectId", "orgId", "description", "status", "createdAt"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "bio": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "walletAddress": { "type": "string" },
        "ens": { "type": "string" },
        "role": {
          "type": "string",
          "enum": ["member", "validator", "admin"]
        },
        "orgs": { 
          "type": "array",
          "items": { "type": "string" }
        },
        "isPublic": { "type": "boolean" }
      },
      "required": ["name", "email"]
    },
    "Certificate": {
      "title": "Certificate",
      "description": "The data representing the final verified certificate for an action.",
      "type": "object",
      "properties": {
        "actionId": { "type": "string" },
        "score": { "type": "number" },
        "issuedAt": { "type": "string", "format": "date-time" },
        "validatorId": { "type": "string" },
        "qrCodeUrl": { "type": "string" }
      },
      "required": ["actionId", "score", "issuedAt", "validatorId"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/organizations/{orgId}": {
      "schema": { "$ref": "#/entities/Organization" },
      "description": "Stores organization data."
    },
    "/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores project data, sub-collection of an organization."
    },
    "/intents/{intentId}": {
      "schema": { "$ref": "#/entities/Intent" },
      "description": "Stores intent data, related to a project."
    },
    "/actions/{actionId}": {
      "schema": { "$ref": "#/entities/Action" },
      "description": "Stores action data, the core submission for validation."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile data."
    },
    "/certificates/{certificateId}": {
      "schema": { "$ref": "#/entities/Certificate" },
      "description": "Stores generated certificates for approved actions."
    }
  }
}

    