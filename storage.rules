
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files so they can be displayed in the app.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the actions folder for evidence uploads.
    // The path is scoped by user ID for security.
    match /actions/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow anyone to write to the intents folder, as the form is public.
    // This allows for uploading media during submission.
    match /intents/{intentId}/{allPaths=**} {
      allow write;
    }
  }
}
